programa {
  funcao inicio() {
    real numero1, numero2, numero3, media
    escreva("Calculadora de media \n Digite o primeiro numero:")
    leia(numero1)

    escreva("\n Digite o segundo numero:")
    leia(numero2)

    escreva("\n Digite o terceiro numero:")
    leia(numero3)

    media = (numero1 + numero2 + numero3) / 3

    escreva(" A media dos numeros é:", media)


  }
}
